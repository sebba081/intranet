<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= titulo %></title>
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/@fortawesome/fontawesome-free/css/all.min.css" />
  <link rel="stylesheet" href="/css/intranet.css" />
</head>
<body class="intranet-body" data-theme="light">
  <div class="intranet-shell">
    <aside id="sidebar" class="intranet-sidebar">
      <div class="sidebar-head">
        <strong class="brand-text">Intranet Instituto</strong>
        <button class="btn btn-sm btn-light" id="collapseBtn" type="button"><i class="fa-solid fa-bars"></i></button>
      </div>

      <nav class="menu-list mt-3">
        <% menu.forEach(function(item) { %>
          <a href="/home/<%= item.section %>?role=<%= activeRole %>" class="menu-item <%= activeSection === item.section ? 'active' : '' %>">
            <i class="fa-solid <%= item.icon %>"></i>
            <span class="menu-text"><%= item.label %></span>
          </a>
        <% }) %>
      </nav>
    </aside>

    <div class="intranet-main">
      <header class="topbar">
        <div class="search-wrap">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" class="form-control" placeholder="Buscar cursos, personas, documentos..." />
        </div>

        <form method="get" action="/home/<%= activeSection %>" class="d-flex gap-2">
          <select name="role" class="form-select form-select-sm" onchange="this.form.submit()">
            <% availableRoles.forEach(function(rol) { %>
              <option value="<%= rol %>" <%= activeRole === rol ? 'selected' : '' %>><%= roleNames[rol] || rol %></option>
            <% }) %>
          </select>
        </form>

        <button class="btn btn-outline-secondary btn-sm" type="button"><i class="fa-regular fa-bell"></i></button>
        <button class="btn btn-outline-secondary btn-sm" id="themeToggle" type="button"><i class="fa-regular fa-moon"></i></button>

        <div class="user-chip">
          <div class="avatar"> <%= (usuario.nombre || 'U').slice(0, 1).toUpperCase() %> </div>
          <div>
            <div class="fw-semibold small"><%= usuario.nombre %></div>
            <div class="text-muted x-small"><%= roleNames[activeRole] || activeRole %></div>
          </div>
        </div>
      </header>

      <main class="p-3 p-lg-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
          <h1 class="h4 m-0"><%= selected.title %></h1>
          <span class="badge text-bg-light border">Rol activo: <%= roleNames[activeRole] || activeRole %></span>
        </div>

        <% if (activeSection === 'dashboard') { %>
          <div class="row g-3 mb-3">
            <% selected.cards.forEach(function(card) { %>
              <div class="col-12 col-md-4">
                <article class="modern-card h-100">
                  <div class="card-title"><%= card %></div>
                  <p class="text-muted small mb-0">Vista resumida con datos mock para pruebas funcionales.</p>
                </article>
              </div>
            <% }) %>
          </div>
        <% } %>

        <% if (activeSection === 'cursos') { %>
          <section class="modern-card mb-3">
            <h2 class="h6 mb-3">Detalle de curso</h2>
            <ul class="nav nav-tabs modern-tabs" id="courseTabs" role="tablist">
              <li class="nav-item" role="presentation"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-resumen" type="button">Resumen</button></li>
              <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-evaluaciones" type="button">Evaluaciones</button></li>
              <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-asistencia" type="button">Asistencia</button></li>
            </ul>
            <div class="tab-content pt-3">
              <div class="tab-pane fade show active" id="tab-resumen">
                <p class="mb-1"><strong><%= cursoDetalle.nombre %></strong> · <%= cursoDetalle.id %></p>
                <p class="text-muted mb-0">Docente: <%= cursoDetalle.docente %> · Aula: <%= cursoDetalle.aula %> · Avance: <%= cursoDetalle.avance %></p>
              </div>
              <div class="tab-pane fade" id="tab-evaluaciones">
                <p class="text-muted mb-0">Parcial 2 publicado · Proyecto sprint en revisión.</p>
              </div>
              <div class="tab-pane fade" id="tab-asistencia">
                <p class="text-muted mb-0">Promedio de asistencia actual: 92%.</p>
              </div>
            </div>
          </section>
        <% } %>

        <section class="modern-card table-card" data-table-root>
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
            <input type="text" class="form-control form-control-sm table-filter" placeholder="Filtrar..." />
            <button type="button" class="btn btn-sm btn-outline-success table-refresh">Recargar</button>
          </div>

          <div class="table-skeleton d-none">
            <div class="skeleton-row"></div><div class="skeleton-row"></div><div class="skeleton-row"></div>
          </div>

          <div class="table-empty d-none">No hay resultados para el filtro aplicado.</div>

          <% if (selected.rows && selected.rows.length) { %>
            <div class="table-responsive">
              <table class="table align-middle mb-1 data-table">
                <thead>
                  <tr>
                    <% Object.keys(selected.rows[0]).forEach(function(key) { %>
                      <th><%= key %></th>
                    <% }) %>
                  </tr>
                </thead>
                <tbody>
                  <% selected.rows.forEach(function(row) { %>
                    <tr>
                      <% Object.values(row).forEach(function(value) { %>
                        <td><%= value %></td>
                      <% }) %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="d-flex justify-content-end align-items-center gap-2 mt-2">
              <button type="button" class="btn btn-sm btn-outline-secondary table-prev">Anterior</button>
              <span class="table-page small">1/1</span>
              <button type="button" class="btn btn-sm btn-outline-secondary table-next">Siguiente</button>
            </div>
          <% } else { %>
            <div class="table-empty">No hay datos disponibles.</div>
          <% } %>
        </section>
      </main>
    </div>
  </div>

  <div id="toast" class="intranet-toast">Datos actualizados</div>
  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/intranet.js"></script>
</body>
</html>
